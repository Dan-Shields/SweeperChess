{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext"],
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": [
		"./src"
	]
}
